generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id                  Int      @id @default(autoincrement())
  tripType            String
  dropType            String
  pickupLocation      String
  dropoffAddress      String
  flightNumber        String
  pickupWaitTime      String
  customerRequirement String?
  pickupDate          DateTime
  pickupTime          String
  passengers          Int
  checkinLuggage      Int
  handLuggage         Int
  createdAt           DateTime @default(now())

   fullName     String?
  email        String?
  countryCode  String?
  phoneNumber  String?
  agreedTerms  Boolean? @default(false)
}

